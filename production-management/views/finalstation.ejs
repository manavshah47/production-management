                          <div class="input-group">
                            <div class="input-group-prepend">
                              <span class="input-group-text bg-white"><i class="fa fa-phone"></i></span>
                            </div>
                            <input name="plan" type="date" id="plan" placeholder="plan" class="form-control border-left-0"
