                            </div>
                            <input name="plan" type="date" id="plan" placeholder="plan" class="form-control border-left-0"
                              value="<%= records[i].plan %>">
                          </div>
                        </div>
                      </div>
                    </td>
                    <td>
                      <!-- <%= records[i].remark %> -->
                      <div class="col">
                        <div class="form-group">
                          <div class="input-group">
                            <div class="input-group-prepend">
                              <span class="input-group-text bg-white"><i class="fa fa-phone"></i></span>
                            </div>
                            <input name="remark" id="remark" type="text" placeholder="no remark"
                              class="form-control border-left-0" value="<%= records[i].remark %>">
                          </div>
                        </div>
                      </div>
                    </td>
                <% } else {%>
                  <tr>
                    <td>
                      <div class="col">
                        <div class="form-group">
                          <div class="input-group">
                            <div class="input-group-prepend">
                              <span class="input-group-text bg-white"><i class="fa fa-phone"></i></span>
                            </div>
                            <input name="shallno" id="shallno" type="text" placeholder="shall number"
                              class="form-control border-left-0" value="<%= records[i].shallno %>" readonly>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="col">
